@model IEnumerable<BusinessObject.ProductObject>
@{
    ViewData["Title"] = "Product Index";
}

<div class="container">
    <h2>
        <a asp-controller="Product" asp-action="Create">Create new product</a>
    </h2>
    <h2>Products</h2>
    <table class="table table-striped table-bordered" id="sortTable">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Weight</th>
                <th>Price</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.Weight</td>
                    <td>@product.UnitPrice</td>
                    <td>
                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.ProductId">View details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
$('#sortTable').DataTable();
</script>