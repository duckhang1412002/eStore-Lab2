@model BusinessObject.ProductObject
@{
    ViewData["Title"] = "Edit";
}

<h1 class="row">Edit a Product</h1> <br/>
<div class="row">
    <form method="POST" asp-action="Edit">
        <input asp-for="ProductId" hidden>
        CategoryId <input asp-for="CategoryId" class="form-control">
        ProductName <input asp-for="ProductName" class="form-control">
        Weight <input asp-for="Weight" class="form-control">
        UnitPrice <input asp-for="UnitPrice" class="form-control">
        UnitsInStock <input asp-for="UnitsInStock" class="form-control">
        <input type="submit" value="Save" class="btn btn-primary">
    </form>
</div>

