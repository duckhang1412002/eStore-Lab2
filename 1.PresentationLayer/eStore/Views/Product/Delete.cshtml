@model BusinessObject.ProductObject
@{
    ViewData["Title"] = "Delete";
}

<h1 class="row">Are you sure want to delete this??</h1> <br/>
<div class="row">
    <form method="POST" asp-action="Delete">
        <input asp-for="ProductId" hidden>
        CategoryId <input asp-for="CategoryId" class="form-control" disabled>
        ProductName <input asp-for="ProductName" class="form-control" disabled>
        Weight <input asp-for="Weight" class="form-control" disabled>
        UnitPrice <input asp-for="UnitPrice" class="form-control" disabled>
        UnitsInStock <input asp-for="UnitsInStock" class="form-control" disabled>
        <input type="submit" value="Delete" class="btn btn-danger">
        <a asp-action="Index" class="btn btn-primary">Back to list</a>
    </form>
</div>

